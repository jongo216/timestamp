<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CustomStyleButtonLight" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#5d6153</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/custom_button_light</item>
       <item name="android:padding">10dip</item>
   </style>
    
    <style name="CornerRadius">
        <item name="android:background">@drawable/checkinbutton_white</item>
    </style>
    
    <style name="CustomStyleButtonDark" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/custom_button_dark</item>
       <!--  <item name="android:padding">10dip</item> -->
   </style>
   
   <style name="CustomStyleButtonBlue" parent="@android:style/Widget.Button">
	 <item name="android:textSize">16sp</item>
	 <item name="android:textStyle">bold</item>
	 <item name="android:textColor">#dedfdc</item>
	 <item name="android:gravity">center</item>
	 <item name="android:shadowColor">#000000</item>
	 <item name="android:shadowDx">1</item>
	 <item name="android:shadowDy">1</item>
	 <item name="android:shadowRadius">0.6</item>
	 <item  name="android:background">@drawable/custom_button_blue</item>
	 <item name="android:padding">10dip</item>
	</style>
	
   <style name="CustomStyleButton" parent="@android:style/Widget.Button">
	 <item name="android:textSize">16sp</item>
	 <item name="android:textStyle">bold</item>
	 <item name="android:textColor">#222222</item>
	 <item name="android:gravity">center</item>
	 <item name="android:shadowColor">#000000</item>
	 <item name="android:shadowDx">1</item>
	 <item name="android:shadowDy">1</item>
	 <item name="android:shadowRadius">0.6</item>
	 <item  name="android:background">@drawable/custom_button_light</item>
	 <item name="android:padding">10dip</item>
	</style>
	
	
    
</resources>
