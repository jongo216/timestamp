<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.timestamp.ManageProjects"
    tools:ignore="MergeRootFrame" >
    
    <ScrollView
        android:id="@+id/timePostScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="top"
        android:scrollbars="vertical"
        android:fadeScrollbars="false" >

	    <TableLayout
	        android:id="@+id/project_table"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:stretchColumns="2"
	        android:shrinkColumns="2" 
	        >
    

		    <TableRow
		       android:background="#063A70"
		       >
	
		        <TextView
		            android:layout_weight="1"
		            android:gravity="center"
		            android:padding="3dp"
		            android:text="Project"
		            android:textColor="#FFFFFF"
		            />
	
		        <TextView
		            android:layout_weight="1"
		            android:gravity="center"
		            android:padding="3dp"
		            android:text="Customer" 
		             android:textColor="#FFFFFF"/>
	
		        <TextView
		            android:layout_weight="2"
		            android:gravity="center"
		            android:padding="3dp"
		            android:text="Description" 
		            android:textColor="#FFFFFF"/>
	
		        
		
		    </TableRow>
	    
   		</TableLayout>
	</ScrollView>
    <Button
        android:id="@+id/createnewprojectbtn"
        style="@style/CustomStyleButtonDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="+ Create project" />

</RelativeLayout>
