<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:tileMode="repeat"
    tools:context=".Start" >
    
    
    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/Overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/projects_menu_spinner2"
        style="@style/CustomStyleButtonDark"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        />

    <ImageButton
        android:id="@+id/btnCheckIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/graf"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background ="@android:color/white"
        android:src="@drawable/clock"
        
        
        android:text="@string/button_timestart"
        />
    
    <ImageView
        android:id="@+id/graf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerProjectView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:baselineAlignBottom="true"
        android:src="@drawable/graf"/>

    <TextView
        android:id="@+id/textWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projects_menu_spinner2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/myColorG"
        android:text="@string/textWeek"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/Times"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/graf"
        android:layout_below="@+id/btnCheckIn"
        android:text="Times" />

    <Button
        android:id="@+id/Projects"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Projects"
        android:layout_alignLeft="@+id/Projects"
        android:text="Times" />
    	android:layout_alignRight="@+id/graf"
        android:layout_below="@+id/btnCheckIn"
        android:text="Projects" />
    <Chronometer
        android:id="@+id/chronometer"
        android:format="%s"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"/>
    
</RelativeLayout>
