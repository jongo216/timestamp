<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical" >

    
        <DatePicker
            android:id="@+id/datePickerEditReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/button_save" />
        <!-- START-TIME-PICKER-TEXT -->
        <TextView
            android:id="@+id/textEditStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/timePickerStart"
            android:text="@string/textEditStartTime"
            android:textSize="13sp" />
        
        <!-- START-TIME-PICKER -->
        <TimePicker
            android:id="@+id/timePickerStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePickerEditReport"
            android:layout_toRightOf="@+id/textEditStartTime"
            android:scaleX="0.7"
            android:scaleY="0.7" />
        
        <!-- END-TIME-PICKER-TEXT -->
        <TextView
            android:id="@+id/textEditEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/timePickerStart"
            android:layout_alignTop="@+id/timePickerStart"
            android:text="@string/textEditEndTime"
            android:textSize="13sp" />
        
        <!-- END-TIME-PICKER -->
        <TimePicker
            android:id="@+id/timePickerEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textEditEndTime"
            android:layout_alignTop="@+id/timePickerStart"
            android:scaleX="0.7"
            android:scaleY="0.7" />

        <!-- Header till comment Field -->
        <TextView
            android:id="@+id/textEditComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextComment"
            android:layout_marginLeft="20dp"
            android:text="@string/textEditComment" />
        
        <!-- Comment Field -->
        <EditText
            android:id="@+id/editTextComment"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_above="@+id/button_save"
            android:layout_alignLeft="@+id/button_save"
            android:layout_alignRight="@+id/button_delete"
            android:singleLine="true"
            android:hint="@string/editTextCommentHint"
            android:maxLength="40"
            android:textSize="12sp" />


        <!-- SPARA KNAPPEN -->
        <Button
            android:id="@+id/button_save"
            style="@style/CustomStyleButtonDark"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/buttonSaveEdit" />

        <!-- TA BORT KNAPPEN -->
        <Button
            android:id="@+id/button_delete"
            style="@style/CustomStyleButtonDark"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/buttonDeleteEdit" />

        

</RelativeLayout>