<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <ImageView
        android:id="@+id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/date_picker_timereport_smaller"/>
    
    <TextView
        android:id="@+id/text_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="147dp"
        android:text="Starttid"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_begin"
        android:layout_below="@+id/text_begin"
        android:layout_marginTop="10dp"
        android:text="Sluttid"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_end"
        android:layout_below="@+id/text_end"
        android:layout_marginTop="15dp"
        android:text="Kommentar"
        android:textAppearance="?android:attr/textAppearanceSmall" />

   
    <!-- KOMMENTAR FÄLTET
    	Behöver någon slags maxgräns, kan max skriva
    	40 tecken, men kan trycka enter 40 gånger och 
    	då åker försvinner undre "linjen" -->
    <EditText 
        android:id="@+id/editText1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_comment"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Möte"
        android:maxLength="40"
        android:paddingLeft="5dp"
        android:paddingTop="1dp"
        android:textSize="12sp" >
    </EditText>
	
    <!-- SPARA KNAPPEN -->
    <Button
        android:id="@+id/button_save"
        style="@style/CustomStyleButtonDark"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:minHeight="40dp"
        android:minWidth="0dp"
        android:text="Spara" />
	
    <!-- LÄGG TILL NY TIDSPOST KNAPPEN -->
    <Button
        android:id="@+id/button_add_day"
        style="@style/CustomStyleButtonDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_save"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:minHeight="40dp"
        android:minWidth="0dp"
        android:singleLine="true"
        android:text="Lägg till ny tidspost" />

    
    <TextView
        android:id="@+id/text_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_begin"
        android:layout_alignBottom="@+id/text_begin"
        android:layout_alignRight="@+id/editText1"
        android:text="08:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_comment"
        android:layout_alignRight="@+id/text_start_time"
        android:text="17:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    

</RelativeLayout>